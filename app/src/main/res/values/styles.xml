<resources>
    <style name="AppTheme.New" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">@color/gradient_color_left</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="FullScreenMode" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/gradient_color_left</item>
    </style>
</resources>
